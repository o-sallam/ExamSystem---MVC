@model IEnumerable<ExamViewModel>
@{
    ViewData["Title"] = "Exams";
}

<header class="flex justify-between items-center mb-8 flex-wrap gap-5">
    <h1 class="main-title">OnlineExamSystem</h1>
    <partial name="_UserProfilePartial" />
</header>
<div>
    <div class="flex justify-between items-center mb-6">
        <div class="flex gap-3 items-center">
            <button
                class="filter-btn active py-2 px-5 rounded-full bg-blue-500 text-white font-medium shadow-md hover:-translate-y-1 transition-all duration-300"
                data-filter="all">
                All Exams
            </button>
            <button
                class="filter-btn py-2 px-5 rounded-full bg-gray-100 text-gray-600 font-medium shadow-md hover:-translate-y-1 transition-all duration-300"
                data-filter="recent">
                Recent
            </button>
            <button
                class="filter-btn py-2 px-5 rounded-full bg-gray-100 text-gray-600 font-medium shadow-md hover:-translate-y-1 transition-all duration-300"
                data-filter="popular">
                Popular
            </button>
        </div>

        <div class="relative group">
            <input
                type="text"
                id="searchInput"
                placeholder="Search exams..."
                class="w-64 py-2.5 px-6 rounded-full bg-white border border-gray-200 text-gray-700 font-medium shadow-sm 
                           focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent
                           transition-all duration-300 ease-in-out
                           placeholder:text-gray-400" />
            <i
                class="fas fa-search absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 
                          group-hover:text-blue-500 transition-colors duration-300"></i>
        </div>
    </div>
</div>

<!-- Data grid -->
<div
    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 justify-between"
    id="examsContainer">
    <!--  Data loaded here from js -->
</div>

@section Scripts {
    <script type="module">
                            import { initExamDataManager } from '/js/examDataManager.js';
                            const examData = @Html.Raw(Json.Serialize(Model));

                            initExamDataManager(examData);
                        </script>
}