@model OnlineExamSystem.Web.DTOs.AddStudentDto
@{
    ViewData["Title"] = "Add Student";
}

<div class="bg-darksurface border border-darkborder rounded-xl overflow-hidden">
    <div class="p-6">
        <h2 class="text-xl font-semibold mb-6">Add New Student</h2>

        <form asp-area="Admin" asp-controller="Students" asp-action="AddStudent"
            method="post">
            <div asp-validation-summary="ModelOnly"
                class="text-red-500 mb-4"></div>

            <div class="mb-6">
                <label asp-for="Username"
                    class="block mb-2 font-medium text-darktext">Username</label>
                <input asp-for="Username"
                    class="w-full px-4 py-3 bg-darkbg border border-darkborder rounded-lg focus:outline-none focus:ring-2 focus:ring-darkprimary text-darktext"
                    placeholder="Enter username" />
                <span asp-validation-for="Username"
                    class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-6">
                <label asp-for="FullName"
                    class="block mb-2 font-medium text-darktext">Full
                    Name</label>
                <input asp-for="FullName"
                    class="w-full px-4 py-3 bg-darkbg border border-darkborder rounded-lg focus:outline-none focus:ring-2 focus:ring-darkprimary text-darktext"
                    placeholder="Enter student's full name" />
                <span asp-validation-for="FullName"
                    class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-6">
                <label asp-for="Password"
                    class="block mb-2 font-medium text-darktext">Password</label>
                <input asp-for="Password"
                    type="password"
                    class="w-full px-4 py-3 bg-darkbg border border-darkborder rounded-lg focus:outline-none focus:ring-2 focus:ring-darkprimary text-darktext"
                    placeholder="Enter password" />
                <span asp-validation-for="Password"
                    class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-end">
                <a asp-action="Index"
                    class="bg-darkbg hover:bg-darkbg/90 text-darktext px-4 py-2 rounded-lg transition-colors mr-2 border border-darkborder">
                    Cancel
                </a>
                <button type="submit"
                    class="bg-darkprimary hover:bg-darkprimary/90 text-white px-4 py-2 rounded-lg transition-colors flex items-center gap-2">
                    <i class="fas fa-plus"></i> Add Student
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}