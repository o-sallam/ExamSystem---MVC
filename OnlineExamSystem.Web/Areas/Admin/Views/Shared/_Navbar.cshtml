<!-- Top Bar -->
<header class="bg-darksurface border-b border-darkborder p-4 flex justify-between items-center sticky top-0 z-10">
    <div class="flex items-center">
        <h2 class="text-xl font-semibold">@ViewData["Title"]</h2>
    </div>
    <div class="flex items-center gap-4">
        <div class="relative">
            <button class="text-darktext hover:text-white transition-colors">
                <i class="fas fa-bell"></i>
                <span class="absolute -top-1 -right-1 bg-darkaccent text-white text-xs rounded-full w-4 h-4 flex items-center justify-center">3</span>
            </button>
        </div>
        
        @await Html.PartialAsync("_AuthPartial")
    </div>
</header>