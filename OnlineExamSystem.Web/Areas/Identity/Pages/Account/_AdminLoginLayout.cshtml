<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - OnlineExamSystem</title>
	<link rel="stylesheet" href="~/css/fonts/fontawesome.css"
		  asp-append-version="true" />
	<link rel="stylesheet" href="~/css/fonts/poppins-font.css"
		  asp-append-version="true" />
	<link rel="stylesheet" href="~/css/styles/tailwind.css"
		  asp-append-version="true" />
</head>
<body class="bg-darkbg text-darktext min-h-screen flex justify-center items-center p-4 font-[Poppins]">
	<div class="w-full max-w-md">
		<div class="flex justify-center items-center mb-8">
			<h1 class="text-3xl font-bold text-center bg-gradient-to-r from-darkprimary to-darkaccent bg-clip-text text-transparent">
				ExamSystem CP
			</h1>
		</div>
		@RenderBody()
	</div>


	@RenderSection("Scripts", required: false)
</body>
</html>